{
	"type": "module",
	"scripts": {
		"dev": "vite",
		"lint": "tsc --noEmit",
		"build": "vite build",
		"test": "vitest --exclude tests/e2e",
		"api": "nodemon --watch api -e \"*\" --exec \"npm run api:build && node netlify/functions/api.js\"",
		"api:lint": "cd api && tsc --noEmit; cd ..",
		"api:build": "esbuild api/server.ts --bundle --packages=external --format=esm --outfile=netlify/functions/api.js",
		"e2e": "npx playwright test",
		"test:coverage": "vitest --exclude tests/e2e --coverage --run"
	},
	"prettier": {
		"useTabs": true,
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	},
	"dependencies": {
		"@clerk/clerk-react": "latest",
		"@clerk/fastify": "^1.0.10",
		"@fastify/mongodb": "^8.0.0",
		"@fastify/multipart": "^8.2.0",
		"@fastify/swagger": "^8.14.0",
		"@fastify/swagger-ui": "^3.0.0",
		"@fontsource/jetbrains-mono": "^5.0.20",
		"cookies": "latest",
		"dotenv": "latest",
		"fastify": "^4.27.0",
		"fastify-plugin": "^4.5.1",
		"fastify-type-provider-zod": "^1.2.0",
		"jsonwebtoken": "latest",
		"react": "latest",
		"react-dom": "latest",
		"react-router-dom": "latest",
		"serverless-http": "latest",
		"zod": "latest",
		"zodix": "latest"
	},
	"devDependencies": {
		"@playwright/test": "latest",
		"@testing-library/react": "latest",
		"@types/cookies": "latest",
		"@types/jsonwebtoken": "latest",
		"@types/node": "^20.12.12",
		"@unocss/preset-wind": "^0.60.3",
		"@vitejs/plugin-react": "latest",
		"@vitest/coverage-istanbul": "latest",
		"esbuild": "latest",
		"jsdom": "latest",
		"msw": "latest",
		"nodemon": "latest",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.0",
		"typescript": "latest",
		"unocss": "^0.60.3",
		"vite": "latest",
		"vitest": "latest"
	}
}
